<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="logsDirectory" value="C:/Projects/ProjectReleases/LOGS"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <target xsi:type="File" name="common" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message}" />

    <target xsi:type="File" name="QueueProcessor" fileName="${logsDirectory}/logs/${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message}" />

    <target xsi:type="File" name="SmsLending" fileName="${logsDirectory}/logs/${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message}" />

    <target xsi:type="File" name="OtpVerification" fileName="${logsDirectory}/logs/${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message}" />

    <target xsi:type="File" name="FlexFinBotAdminPanel" fileName="${logsDirectory}/logs/${shortdate}.log"
           layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message}" />

    <target xsi:type="File" name="WindowsServiceWrapper" fileName="${logsDirectory}/logs/${shortdate}.log"
           layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message}" />

    <target xsi:type="File" name="notValidSMS" fileName="${basedir}/logs/NotValidSMS/${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message}" ></target>
    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="common" minlevel="Trace" writeTo="common" />
    <logger name="QueueProcessor" minlevel="Trace" writeTo="QueueProcessor"/>
    <logger name="SmsLending" minlevel="Trace" writeTo="SmsLending"/>
    <logger name="OtpVerification" minlevel="Trace" writeTo="OtpVerification"/>
    <logger name="FlexFinBotAdminPanel" minlevel="Trace" writeTo="FlexFinBotAdminPanel"/>
    <logger name="WindowsServiceWrapper" minlevel="Trace" writeTo="WindowsServiceWrapper"/>
    <logger name="NotValidSMS" minlevel="Trace" writeTo="notValidSMS"/>
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
  </rules>
</nlog>
